	<cn.hfiti.toiletapp.view.CustomActionBar
		android:id="@+id/main_action_bar"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		app:title_text="智能马桶"
		app:left_button_drawable="@drawable/home_1"
		app:right_button_drawable="@drawable/user"
        app:title_background_color="@drawable/face_top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/main_frag"
        android:orientation="vertical"
        android:layout_weight="7.8"
        android:background="#f0f0f4">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/xuanchuan"
            android:background="@drawable/face" />
    </LinearLayout>   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.2"
        android:background="@drawable/face_down">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="0.6"
			    android:id="@+id/bn_connect"
			    android:src="@drawable/bluetooth_icon1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/text_connect"
                android:gravity="center"
                android:layout_weight="1"
                android:text="蓝牙"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="0.6"
		        android:id="@+id/bn_remote"
                android:src="@drawable/remote_icon_selector" />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="遥控"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/bn_health"
	            android:layout_weight="0.6"
	            android:src="@drawable/health_selector"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="健康"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:id="@+id/bn_quit"
	            android:layout_weight="0.6"
	            android:src="@drawable/quit_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="退出"/>
        </LinearLayout>       
    </LinearLayout>
</LinearLayout>
